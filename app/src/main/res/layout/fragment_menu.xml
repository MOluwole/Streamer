<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yung.streamer.Menu">

    <GridLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/menu_search"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="top"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_youtube_searched_for_black"
            android:minWidth="150sp"
            android:padding="30dp"
            android:text="Search Video"
            android:textColor="#fff" />


        <Button
            android:id="@+id/menu_view"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="top"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_video_library_black"
            android:minWidth="150sp"
            android:padding="30dp"
            android:text="Saved Videos"
            android:textColor="#fff" />

        <Button
            android:id="@+id/menu_delete"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:layout_marginBottom="50dp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_cancel_black"
            android:minWidth="150sp"
            android:padding="30dp"
            android:text="Delete All"
            android:textColor="#fff" />

        <Button
            android:id="@+id/menu_logout"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:layout_marginBottom="50dp"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_account_box_black"
            android:minWidth="150sp"
            android:padding="25dp"
            android:text="Logout"
            android:textColor="#fff" />
</GridLayout>
</ScrollView>